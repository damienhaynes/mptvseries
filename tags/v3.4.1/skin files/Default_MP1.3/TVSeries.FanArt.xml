<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>9812</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#useSelectedFanart:No</define>
