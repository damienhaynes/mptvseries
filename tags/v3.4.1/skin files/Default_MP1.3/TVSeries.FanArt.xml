      <texture>BH TV.jpg</texture>
      <width>960</width>
      <height>720</height>
      <colordiffuse>90ffffff</colordiffuse>
    </control>
    <control>
      <description>preview</description>
      <id>0</id>
      <type>image</type>
      <posX>-240</posX>
      <posY>0</posY>
      <width>1440</width>
      <height>720</height>
      <texture>#TVSeries.FanArt.SelectedPreview</texture>
    </control>
    <control>
      <description>background top overlay</description>
      <type>image</type>
      <id>1</id>
      <posX>0</posX>
      <posY>0</posY>
      <width>960</width>
      <height>270</height>
      <texture>overlay_top.png</texture>
      <colordiffuse>ccffffff</colordiffuse>
    </control>
		<control>
      <description>General Overlay</description>
      <id>0</id>
      <type>image</type>
      <posX>0</posX>
      <posY>30</posY>
      <width>960</width>
      <height>720</height>
      <texture>general_overlay.png</texture>
    </control>
		<control>
      <description>background selecteditem</description>
      <type>image</type>
      <id>0</id>
      <posX>-20</posX>
      <posY>65</posY>
      <width>1012</width>
      <height>60</height>
      <texture>general_overlay_selecteditem.png</texture>
      <colordiffuse>bbffffff</colordiffuse>
    </control>
		<import>common.window.xml</import>
    <import>common.time.xml</import>
		<control>
      <description>Selected item Label</description>
      <type>fadelabel</type>
      <id>1</id>
      <posX>0</posX>
      <posY>95</posY>
      <width>960</width>
      <label>#selecteditem [#TVSeries.FanArt.SelectedFanartResolution] #(iif(eq(#TVSeries.FanArt.SelectedFanartIsChosen,#TVSeries.Translation.Yes.Label),string.format('[{0}]',string.rtrim(#TVSeries.Translation.LabelChosen.Label,':')),''))</label>
      <font>font16</font>
      <align>center</align>
      <textcolor>ff6FAFE1</textcolor>
    </control>
    <control>
      <type>label</type>
      <id>1</id>
      <posX>22</posX>
      <posY>10</posY>
      <label>#currentmodule | #TVSeries.FanArt.FilterResolution #(iif(eq(#TVSeries.FanArt.LoadingStatus,''),'','| #TVSeries.FanArt.LoadingStatus'))</label>
      <font>font11</font>
      <align>left</align>
      <textcolor>ff6FAFE1</textcolor>
    </control>
    <control>
      <description>Number of Files Label</description>
      <type>label</type>
      <id>1</id>
      <posX>22</posX>
      <posY>35</posY>
      <label>#selectedindex/#TVSeries.FanArt.Count #TVSeries.FanArt.DownloadingStatus</label>
      <align>left</align>
      <textcolor>ivory</textcolor>
      <font>font10</font>
      <visible>string.equals(#selectedindex)</visible>
    </control>
    <control>
      <type>actiongroup</type>
      <description>Hidden Menu</description>
      <defaultcontrol>2</defaultcontrol>
      <onexit>50</onexit>
      <buttonX>0</buttonX>
      <buttonY>-130</buttonY>
      <buttonwidth>79</buttonwidth>
      <buttonheight>720</buttonheight>
      <textureFocus>-</textureFocus>
      <textureNoFocus>Action_nofocus.png</textureNoFocus>
      <width>426</width>
      <height>900</height>
      <dimColor>00ffffff</dimColor>
      <control>
        <type>image</type>
        <id>0</id>
        <width>960</width>
        <height>720</height>
        <texture>white.png</texture>
        <colordiffuse>201e90ff</colordiffuse>
      </control>
      <control>
        <type>image</type>
        <posX>19</posX>
        <posY>78</posY>
        <width>287</width>
        <height>591</height>
        <texture>Backslide.png</texture>
        <colorDiffuse>ffffffff</colorDiffuse>
        <visible>!Control.HasFocus(50)</visible>
        <animation effect="slide" time="70" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="70" end="-300,0" reversible="false">hidden</animation>
      </control>
      <control>
        <description>group element</description>
        <type>group</type>
        <animation effect="slide" time="70" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="70" end="-300,0" reversible="false">hidden</animation>
        <visible>!Control.HasFocus(50)</visible>
        <posX>37</posX>
        <posY>121</posY>
        <layout>StackLayout(0, Vertical, true)</layout>
        <visible>!Control.HasFocus(50)</visible>
        <control>
          <description>Change Layout</description>
          <type>button</type>
          <id>2</id>
          <label>Change Layout</label>
          <onleft>50</onleft>
          <onright>50</onright>
        </control>
        <control>
          <description>Resolution Filter</description>
          <type>button</type>
          <id>12</id>
          <label>Filter</label>
          <onleft>50</onleft>
          <onright>50</onright>
        </control>
        <control>
          <description>Random Fanart</description>
          <type>togglebutton</type>
          <id>13</id>
          <label>Random Fanart</label>
          <onleft>50</onleft>
          <onright>50</onright>
        </control>
      </control>
    </control>
    <control>
      <description>group element</description>
      <type>group</type>
      <control>
        <description>composite control consisting of a list control and a thumbnail panel</description>
        <type>facadeview</type>
        <id>50</id>
        <control>
          <description>Thumbnail Panel</description>
          <type>thumbnailpanel</type>
          <dimColor>90ffffff</dimColor>
          <id>50</id>
          <posX>75</posX>
          <posY>190</posY>
          <width>900</width>
          <height>450</height>
          <scrollOffset>1</scrollOffset>
          <onleft>2</onleft>
          <onright>2</onright>
          <itemWidth>140</itemWidth>
          <itemHeight>80</itemHeight>
          <textureWidth>130</textureWidth>
          <textureHeight>73</textureHeight>
          <thumbWidth>130</thumbWidth>
          <thumbHeight>73</thumbHeight>
          <thumbPosX>0</thumbPosX>
          <thumbPosY>0</thumbPosY>
          <itemWidthBig>220</itemWidthBig>
          <itemHeightBig>130</itemHeightBig>
          <thumbWidthBig>200</thumbWidthBig>
          <thumbHeightBig>113</thumbHeightBig>
          <textureWidthBig>200</textureWidthBig>
          <textureHeightBig>113</textureHeightBig>
          <thumbPosXBig>0</thumbPosXBig>
          <thumbPosYBig>0</thumbPosYBig>
          <zoomXPixels>30</zoomXPixels>
          <zoomYPixels>30</zoomYPixels>
          <hideUnfocusTexture>yes</hideUnfocusTexture>
          <renderFocusText>no</renderFocusText>
          <renderUnfocusText>no</renderUnfocusText>
          <showFrame>true</showFrame>
          <textureMask>Picturethumbmask.png</textureMask>
          <frameNoFocus>Picturethumbframe.png</frameNoFocus>
          <frameFocus>Picturethumbframe.png</frameFocus>
          <imageFolder>-</imageFolder>
          <imageFolderFocus>-</imageFolderFocus>
          <keepaspectratio>no</keepaspectratio>
          <font>font10</font>
          <spinPosX>1627</spinPosX>
          <spinPosY>470</spinPosY>
          <dimColor>ffffffff</dimColor>
          <spinCanFocus>no</spinCanFocus>
        </control>
      </control>
    </control>
  </controls>
</window>