<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>87269</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
	<define>#Fanart.1:#Trakt.WatchListEpisodes.Fanart.1</define>
  <define>#Fanart.2:#Trakt.WatchListEpisodes.Fanart.2</define>	  
  <controls>    
		
		<control>
      <id>1</id>
      <description>Background Image</description>
      <type>image</type>
      <posX>0</posX>
      <posY>0</posY>
      <width>720</width>
      <height>576</height>
      <texture>Background.png</texture>
      <colordiffuse>ffffffff</colordiffuse>
			<animation effect="fade" time="300">WindowOpen</animation>
    </control>
    
		<import>Trakt.Common.Fanart.xml</import>
		
		<control>
      <description>Current View</description>
      <type>label</type>
      <id>0</id>
      <posX>20</posX>
      <posY>8</posY>
      <width>650</width>
      <font>font16</font>
      <label>#Trakt.Translation.WatchListEpisodes.Label</label>
      <align>left</align>
      <animation effect="fade" time="150">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>    

    <control>
      <description>Date Time</description>
      <type>label</type>
      <id>0</id>
      <posX>700</posX>
      <posY>21</posY>
      <label>#date | #time</label>
      <align>right</align>
      <font>font12</font>
      <textcolor>ffa9d0f7</textcolor>  
      <animation effect="fade" time="150">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    
    <control>
      <description>Item Count Label</description>
      <type>label</type>
      <label>#Trakt.Items</label>
      <id>0</id>
      <width>135</width>
      <posX>700</posX>
      <posY>1</posY>
      <align>right</align>
      <font>font12</font>
      <textcolor>ffFFFFFF</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="slide" time="150" start="800,0">WindowOpen</animation>
      <animation effect="slide" time="250" end="800,0">WindowClose</animation>
      <visible>control.isvisible(50)</visible>
    </control>
    
    <control>
      <description>group element</description>
      <type>group</type>
      <animation effect="fade" time="150">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="slide" time="150" start="1200,0">WindowOpen</animation>
      <animation effect="slide" time="250" end="1200,0">WindowClose</animation>
      <control>
				<type>facadeview</type>
				<id>50</id>
				<animation effect="fade" time="250" delay="0">WindowClose</animation>
				<control>
          <description>listcontrol</description>
          <type>listcontrol</type>
          <id>50</id>
          <posX>40</posX>
          <posY>50</posY>
          <height>430</height>
          <width>630</width>
          <onleft>2</onleft>
          <onright>2</onright>
          <scrollOffset>2</scrollOffset>
          <itemWidth>89</itemWidth>
          <itemHeight>50</itemHeight>
          <textureHeight>60</textureHeight>
          <IconXOff>25</IconXOff>
          <IconYOff>5</IconYOff>
          <textXOff>25</textXOff>
          <textYOff>8</textYOff>
          <textXOff2>0</textXOff2>
          <textYOff2>32</textYOff2>
          <textXOff3>75</textXOff3>
          <textYOff3>10</textYOff3>
          <font>font16</font>
          <font2>font13</font2>
          <keepaspectratio>yes</keepaspectratio>
          <spinPosX>600</spinPosX>
          <spinPosY>423</spinPosY>
          <spinCanFocus>no</spinCanFocus>
          <suffix>|</suffix>
        </control>
				<control>
					<visible>control.isvisible(50)</visible>
					<description>Filmstrip</description>
					<type>filmstrip</type>
					<id>50</id>
					<onup>2</onup>
					<posX>30</posX>
					<posY>350</posY>
					<width>700</width>
					<height>220</height>
					<scrollOffset>4</scrollOffset>
					<thumbWidth>230</thumbWidth>
          <thumbHeight>129</thumbHeight>
          <thumbPosX>4</thumbPosX>
          <thumbPosY>4</thumbPosY>
          <itemWidth>215</itemWidth>
          <itemHeight>185</itemHeight>
          <textureWidth>250</textureWidth>
          <textureHeight>152</textureHeight>
					<thumbPosX>7</thumbPosX>
					<thumbPosY>7</thumbPosY>
					<thumbs flipY="true" diffuse="diffusemirrorwide.png" />
					<InfoImage>
					</InfoImage>
					<imageFolder>-</imageFolder>
					<imageFolderFocus>-</imageFolderFocus>
					<frame>-</frame>
					<frameFocus>-</frameFocus>
					<showFrame>no</showFrame>
					<showFolder>yes</showFolder>
					<showBackGround>no</showBackGround>
					<showInfoImage>no</showInfoImage>
					<thumbAnimation effect="zoom" start="100,100" end="160,160" tween="quadratic" time="0">focus</thumbAnimation>
          <textYOff>1500</textYOff>
					<!-- Spin Controls -->
					<spinWidth>35</spinWidth>
					<spinHeight>35</spinHeight>
					<spinPosX>300</spinPosX>
          <spinPosY>540</spinPosY>
					<spinAlign>center</spinAlign>
					<spinColor>ffFFFFFF</spinColor>					
				</control>
				<control>
					<description>Thumbnail Panel</description>
					<type>thumbnailpanel</type>
					<id>50</id>
					<dimColor>90ffffff</dimColor>
					<onleft>2</onleft>
					<onright>50</onright>					
					<posX>30</posX>
          <posY>120</posY>
          <height>450</height>
          <width>700</width>
					<scrollOffset>1</scrollOffset>
					<onleft>2</onleft>
          <onright>2</onright>
          <imageFolder>thumbborder2.png</imageFolder>
					<imageFolderFocus>thumbborder3.png</imageFolderFocus>
					<frameNoFocus>-</frameNoFocus>
					<frameFocus>-</frameFocus>
          <!-- Small Icons -->
          <itemWidth>128</itemWidth>
          <itemHeight>75</itemHeight>
          <textureWidth>131</textureWidth>
          <textureHeight>76</textureHeight>
          <thumbWidth>121</thumbWidth>
          <thumbHeight>68</thumbHeight>
          <thumbPosX>5</thumbPosX>
          <thumbPosY>4</thumbPosY>
          <!-- Large Icons -->
          <itemWidthBig>225</itemWidthBig>
          <itemHeightBig>130</itemHeightBig>
          <textureWidthBig>239</textureWidthBig>
          <textureHeightBig>135</textureHeightBig>
          <thumbWidthBig>219</thumbWidthBig>
          <thumbHeightBig>120</thumbHeightBig>
          <thumbPosXBig>10</thumbPosXBig>
          <thumbPosYBig>7</thumbPosYBig>
					<thumbZoom>no</thumbZoom>
					<enableFocusZoom>no</enableFocusZoom>
					<textYOff>1500</textYOff>
					<unfocusedAlpha>100</unfocusedAlpha>
					<spinPosX>620</spinPosX>
          <spinPosY>515</spinPosY>
          <font>font16</font>
					<spinCanFocus>no</spinCanFocus>
					<keepaspectratio>yes</keepaspectratio>
				</control>
			</control>   
		</control>		
    
		<!-- Hidden Menu -->
		<control>
			<type>actiongroup</type>
			<description>action menu</description>
			<defaultcontrol>2</defaultcontrol>
			<onexit>50</onexit>
			<buttonwidth>60</buttonwidth>
		  <buttonheight>567</buttonheight>		  
		  <width>320</width>
		  <height>720</height>
      <textureFocus>-</textureFocus>
      <textureNoFocus>Action_nofocus.png</textureNoFocus>		
			<width>568</width>
			<height>900</height>
			<dimColor>00ffffff</dimColor>
			<control>
				<type>image</type>
				<posX>15</posX>
				<posY>63</posY>
				<width>253</width>
				<height>473</height>
				<texture>Backslide.png</texture>
				<colorDiffuse>fffffffff</colorDiffuse>
				<visible>!Control.HasFocus(50)</visible>
				<animation effect="slide" time="70" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="70" end="-300,0" reversible="false">hidden</animation>
			</control>
			<control>
				<description>group element</description>
				<type>group</type>
				<animation effect="slide" time="70" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="70" end="-300,0" reversible="false">hidden</animation>
				<visible>!Control.HasFocus(50)</visible>				
				<control>
					<description>button group</description>
					<type>group</type>					
					<posX>45</posX>
					<posY>121</posY>
          <width>180</width>
					<layout>StackLayout</layout>          
					<visible>!Control.HasFocus(50)</visible>
					<animation effect="slide" time="70" start="-300,0" reversible="false">visible</animation>
					<animation effect="slide" time="70" end="-300,0" reversible="false">hidden</animation>
          <control>
            <description>Change Layout</description>
            <type>button</type>
            <id>2</id>
            <width>180</width>
            <label>-</label>
            <onup>21</onup>
            <onleft>50</onleft>
            <onright>50</onright>
          </control>
				</control>
      </control>
		</control>
		
		<!-- Episode List Layout -->
		<control>
      <description>Big Episode Thumb</description>
      <type>image</type>
      <id>1</id>
      <posX>60</posX>
      <posY>450</posY>
      <height>113</height>
      <width>200</width>
      <keepaspectratio>yes</keepaspectratio>
      <zoom>no</zoom>
      <texture flipY="true" diffuse="diffusemirrorwide.png">#selectedthumb</texture>      
      <animation effect="fade" time="250" delay="0">WindowClose</animation>
      <animation effect="fade" time="250" delay="0">WindowOpen</animation>
			<visible>facadeview.list</visible>
    </control>
    
    <control>
      <description>Episode Plot</description>
      <type>textboxscrollup</type>
      <id>631</id>
      <posX>270</posX>
      <posY>445</posY>
      <width>410</width>
      <height>119</height>
      <font>font14</font>
      <label>#Trakt.Episode.Overview</label>
      <scrollStartDelaySec>12</scrollStartDelaySec>
      <animation effect="fade" time="250" delay="0">WindowClose</animation>
      <animation effect="fade" time="250" delay="0">WindowOpen</animation>
			<visible>facadeview.list+!string.equals(#Trakt.Episode.Overview,)</visible>
    </control>
    
		
    <!-- Filmstrip / Thumbnails -->
    <control>
      <description>Episode Title</description>
      <type>label</type>
      <id>1</id>
      <posX>0</posX>
      <posY>50</posY>
      <width>720</width>
      <align>center</align>
      <font>font16</font>
      <label>#selecteditem</label>
      <visible>!facadeview.list+control.isvisible(50)+!string.equals(#Trakt.Show.Title,)</visible>
      <animation effect="fade" time="150">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>    
    <control>
      <description>FirstAired</description>
      <type>label</type>
      <label>#Trakt.Episode.FirstAired</label>
      <id>0</id>
      <posX>0</posX>
      <posY>70</posY>
      <width>720</width>
      <align>center</align>
      <font>font14</font>
      <textcolor>ffa9d0f7</textcolor>			
      <visible>!facadeview.list+control.isvisible(50)+!string.equals(#Trakt.Episode.FirstAired,)</visible>
      <animation effect="fade" time="250" delay="0">WindowClose</animation>
      <animation effect="fade" time="250" delay="0">WindowOpen</animation>
    </control>
   
  </controls>
</window>
