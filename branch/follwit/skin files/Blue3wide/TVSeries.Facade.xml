<?xml version="1.0" encoding="utf-8"?>
<window> 
	<controls>
		<!-- OVERLAYS -->
		<control>
			<description>WideBanner Background (No Fanart Visible)</description>
			<type>image</type>            
			<id>0</id>
			<width>1280</width>
			<height>720</height>
			<texture>background.png</texture>            
			<visible>facadeview.largeicons|facadeview.smallicons</visible>
		</control>
		<control>
			<description>FanArt Overlay - List View</description>
			<type>image</type>
			<id>0</id>
			<posX>-2</posX>
			<posY>0</posY>
			<width>1284</width>
			<height>722</height>
			<texture>mainoverlay.png</texture>
			<visible>facadeview.list</visible>
		</control>
		<control>
			<description>FanArt Overlay - Filmstrip View</description>
			<id>0</id>
			<type>image</type>
			<posX>0</posX>
			<posY>0</posY>
			<width>1280</width>
			<height>720</height>			
			<texture>filmstrip_overlay.png</texture>
			<visible>facadeview.filmstrip|facadeview.coverflow</visible>
		</control>
		<control>
			<type>group</type>
			<id>28</id>
			<layout>StackLayout</layout>
			<animation effect="fade" time="250">WindowClose</animation>
			<animation effect="slide" time="250" end="800,0">WindowClose</animation>
			<control>
				<type>facadeview</type>
				<id>50</id>
				<control>					
					<type>listcontrol</type>
					<subtype>album</subtype>
					<id>50</id>
				</control>
				<control>
					<description>Graphical Series Wide Banners (5x2) View</description>
					<type>thumbnailpanel</type>
					<id>50</id>
					<onleft>2</onleft>
					<onright>2</onright>
					<posX>425</posX>
					<posY>69</posY>
					<width>870</width>
					<height>470</height>					
					<textureFocus>-</textureFocus>
					<imageFolder>-</imageFolder>
					<imageFolderFocus>thumbborder.png</imageFolderFocus>	
					<frameNoFocus>-</frameNoFocus>
					<frameFocus>-</frameFocus>			
					<enableFocusZoom>no</enableFocusZoom>
					<scrollOffset>1</scrollOffset>
					<dimColor>30ffffff</dimColor>
					<font>font12</font>
					<unfocusedAlpha>150</unfocusedAlpha>
					<!-- margin -->
					<itemWidthBig>407</itemWidthBig>
					<itemHeightBig>85</itemHeightBig>
					<!-- frame texture -->
					<textureWidthBig>405</textureWidthBig>
					<textureHeightBig>79</textureHeightBig>
					<!-- wide banners -->
					<thumbWidthBig>390</thumbWidthBig>
					<thumbHeightBig>73</thumbHeightBig>
					<thumbPosXBig>8</thumbPosXBig>
					<thumbPosYBig>3</thumbPosYBig>          
					<thumbZoom>no</thumbZoom>
					<!-- text (when there is no banner) -->
					<textXOff>0</textXOff>
					<textYOff>0</textYOff>				
					<!-- Spin Controls -->
					<spinCanFocus>no</spinCanFocus>
					<spinWidth>30</spinWidth>
					<spinHeight>30</spinHeight>
					<spinPosX>1170</spinPosX>
					<spinPosY>500</spinPosY>					
				</control>
				<control>
					<description>Filmstrip view (Series/Season Views)</description>
					<type>filmstrip</type>
					<id>50</id>					
					<posX>25</posX>
					<posY>345</posY>
					<width>1250</width>
					<height>400</height>
					<onup>2</onup>
					<onleft>2</onleft>
					<thumbWidth>170</thumbWidth>
					<thumbHeight>250</thumbHeight>					
					<itemWidth>172</itemWidth>
					<itemHeight>252</itemHeight>				
					<scrollOffset>3</scrollOffset>					
					<showFolder>no</showFolder>
					<showBackGround>no</showBackGround>
					<spinWidth>30</spinWidth>
					<spinHeight>30</spinHeight>
					<spinPosX>1182</spinPosX>
					<spinPosY>670</spinPosY>
					<thumbs flipY="true" diffuse="Thumb_Mask.png"></thumbs>
					<thumbAnimation effect="zoom" start="100,100" end="130,130" time="200">focus</thumbAnimation>
					<thumbAnimation effect="zoom" start="130,130" end="100,100" time="200">unfocus</thumbAnimation>						
				</control>
				<control>
					<description>Text List (Groups/Series/Season/Episode Views)</description>
					<type>listcontrol</type>
					<id>50</id>
					<onleft>2</onleft>
					<onright>2</onright>
					<posX>760</posX>
					<posY>305</posY>
					<width>510</width>
					<height>390</height>
					<IconXOff>480</IconXOff>
					<IconYOff>10</IconYOff>
					<textXOff>-15</textXOff>
					<textYOff>4</textYOff>
					<dimColor>50ffffff</dimColor>
					<scrollOffset>3</scrollOffset>
					<!-- Watched/Unwatched icons -->
					<itemWidth>20</itemWidth>
					<itemHeight>20</itemHeight>
					<textXOff2>480</textXOff2>
					<textYOff2>4</textYOff2>
					<textXOff3>480</textXOff3>
					<textYOff3>4</textYOff3>
					<font>font11</font>
					<font2>font11</font2>
					<font3>font11</font3>
					<!-- Spin Controls -->
					<spinCanFocus>no</spinCanFocus>
					<spinWidth>30</spinWidth>
					<spinHeight>30</spinHeight>
					<spinPosX>1210</spinPosX>
					<spinPosY>645</spinPosY>
				</control>
				<control>
          <description>Cover Flow view</description>
          <type>coverflow</type>
          <colordiffuse>90ffffff</colordiffuse>
          <dimColor>90ffffff</dimColor>
          <id>50</id>
          <posX>0</posX>
          <posY>200</posY>
          <width>1280</width>
          <height>720</height>
          <onup>2</onup>
          <onleft>2</onleft>
          <selectedCard>0</selectedCard>
          <cardWidth>250</cardWidth>
          <cardHeight>360</cardHeight>
          <angle>65</angle>
          <sideShift>250</sideShift>
          <sideGap>80</sideGap>
          <sideDepth>150</sideDepth>
          <offsetY>0</offsetY>
          <selectedOffsetY>0</selectedOffsetY>
          <speed>8</speed>
          <backgroundHeight>250</backgroundHeight>
          <backgroundWidth>1280</backgroundWidth>
          <backgroundX>0</backgroundX>
          <backgroundY>470</backgroundY>
          <backgroundDiffuse>FF000000</backgroundDiffuse>
          <background>background2.png</background>
          <showBackground>yes</showBackground>
          <foregroundHeight>720</foregroundHeight>
          <foregroundWidth>1280</foregroundWidth>
          <foregroundX>0</foregroundX>
          <foregroundY>0</foregroundY>
          <foregroundDiffuse>FF000000</foregroundDiffuse>
          <foreground>coverflow_foreground.png</foreground>
          <showForeground>no</showForeground>
          <showFrame>yes</showFrame>
          <frame>Picture_cover2.png</frame>
          <frameFocus>Picture_cover2.png</frameFocus>
          <frameWidth>250</frameWidth>
          <frameHeight>360</frameHeight>
          <spinSpeed>8</spinSpeed>
          <unfocusedAlpha>FF</unfocusedAlpha>
          <folderPrefix>[</folderPrefix>
          <folderSuffix>]</folderSuffix>
          <font1>font13</font1>
          <font2>font10</font2>
          <label1>#TVSeries.Title</label1>
          <label2>#TVSeries.Series.Genre</label2>
          <textColor>FFFFFFFF</textColor>
          <remoteColor>FFFF0000</remoteColor>
          <playedColor>FFA0D0FF</playedColor>
          <downloadColor>FF00FF00</downloadColor>
          <selectedColor>FFFFFFFF</selectedColor>
          <shadowAngle>45</shadowAngle>
          <shadowDistance>0</shadowDistance>
          <shadowColor>FF000000</shadowColor>
          <label1YOff>405</label1YOff>
          <label2YOff>430</label2YOff>
          <pageSize>5</pageSize>
          <scrollbarBackground>bar_hor.png</scrollbarBackground>
          <scrollbarLeft>mouse_left_horizontal.png</scrollbarLeft>
          <scrollbarRight>mouse_right_horizontal.png</scrollbarRight>
          <scrollbarYOff>480</scrollbarYOff>
          <showScrollbar>yes</showScrollbar>
          <cards flipY="yes" diffuse="Thumb_Mask.png" mask="video_poster_mask.png"></cards>
          <subitems>
            <subitem>
              <![CDATA[
                <controls>
                  <control>
                    <description>background</description>
                    <type>image</type>
                    <posX>0</posX>
                    <posY>0</posY>
                    <width>250</width>
                    <height>360</height>
                    <texture flipY="yes" diffuse="Thumb_Mask.png" mask="video_poster_mask.png">background2.png</texture>
                  </control>
                  <control>
                    <description>Series Details</description>
                    <type>label</type>
                    <posX>20</posX>
                    <posY>10</posY>
                    <width>210</width>
                    <label>#TVSeries.Translation.SeriesDetails.Label</label>
                    <font>font10</font>
                    <textcolor>FFFFFFFF</textcolor>
                  </control>
                  <control>
                    <description>Genre</description>
                    <type>label</type>
                    <posX>20</posX>
                    <posY>40</posY>
                    <width>210</width>
                    <label>#TVSeries.Series.Genre</label>
                    <font>font9</font>
                    <textcolor>FFFFFFFF</textcolor>
                  </control>
                  <control>
                    <description>First Aired</description>
                    <type>label</type>
                    <posX>20</posX>
                    <posY>60</posY>
                    <width>210</width>
                    <label>#TVSeries.Series.FirstAired</label>
                    <font>font9</font>
                    <textcolor>FFFFFFFF</textcolor>
                  </control>
                  <control>
                    <description>Runtime</description>
                    <type>label</type>
                    <posX>20</posX>
                    <posY>80</posY>
                    <width>210</width>
                    <label>#TVSeries.Series.Runtime #TVSeries.Translation.Runtime.Label</label>
                    <font>font9</font>
                    <textcolor>FFFFFFFF</textcolor>
                  </control>
                  <control>
                    <description>Rating</description>
                    <type>label</type>
                    <posX>20</posX>
                    <posY>100</posY>
                    <width>210</width>
                    <label>#TVSeries.Series.DataPanelLine41Value (#TVSeries.Series.RatingCount #TVSeries.Translation.Votes.Label)</label>
                    <font>font9</font>
                    <textcolor>FFFFFFFF</textcolor>
                  </control>                  
                  <control>
                    <description>Network</description>
                    <type>label</type>
                    <posX>20</posX>
                    <posY>120</posY>
                    <width>210</width>
                    <label>#TVSeries.Series.Network</label>
                    <font>font9</font>
                    <textcolor>FFFFFFFF</textcolor>
                  </control>
                  <control>
                    <description>Summary</description>
                    <type>textboxscrollup</type>
                    <posX>20</posX>
                    <posY>145</posY>
                    <width>210</width>
                    <height>90</height>
                    <label>#TVSeries.Series.Summary</label>
                    <font>font9</font>
                    <lineSpacing>2</lineSpacing>
                    <textcolor>FFFFFFFF</textcolor>
                  </control>
                </controls>
              ]]>
            </subitem>
          </subitems>
        </control>
			</control>
		</control>
	
	</controls>
</window>
