<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>87280</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <controls>    
		
		<control>
      <id>1</id>
      <description>Background Image</description>
      <type>image</type>
      <posX>0</posX>
      <posY>0</posY>
      <width>720</width>
      <height>576</height>
      <texture>Background.png</texture>
      <colordiffuse>ffffffff</colordiffuse>
			<animation effect="fade" time="300">WindowOpen</animation>
    </control>    

		<control>
      <description>Fanart Background #1</description>
      <type>image</type>
      <id>1</id>
      <posX>-152</posX>
		  <posY>0</posY>
		  <width>1024</width>
		  <height>576</height>
      <texture>#Trakt.Shout.Fanart</texture>
			<colordiffuse>50ffffff</colordiffuse>
      <animation effect="fade" time="300">visible</animation>
    </control>		
		
    <control>
      <description>Current View</description>
      <type>label</type>
      <id>0</id>
      <posX>20</posX>
      <posY>8</posY>
      <width>650</width>
      <font>font16</font>
      <label>Trakt #Trakt.Translation.Shouts.Label | #Trakt.Shout.CurrentItem</label>
      <align>left</align>
      <animation effect="fade" time="150">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>    

    <control>
      <description>Date Time</description>
      <type>label</type>
      <id>0</id>
      <posX>700</posX>
      <posY>21</posY>
      <label>#date | #time</label>
      <align>right</align>
      <font>font12</font>
      <textcolor>ffa9d0f7</textcolor>  
      <animation effect="fade" time="150">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
    
    <control>
      <description>Item Count Label</description>
      <type>label</type>
      <label>#Trakt.Items</label>
      <id>0</id>
      <width>135</width>
      <posX>700</posX>
      <posY>1</posY>
      <align>right</align>
      <font>font12</font>
      <textcolor>ffFFFFFF</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="slide" time="150" start="800,0">WindowOpen</animation>
      <animation effect="slide" time="250" end="800,0">WindowClose</animation>
      <visible>control.isvisible(50)</visible>
    </control>
   
    <control>
      <description>group element</description>
      <type>group</type>
      <animation effect="fade" time="150">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <animation effect="slide" time="150" start="1200,0">WindowOpen</animation>
      <animation effect="slide" time="250" end="1200,0">WindowClose</animation>
      <control>
        <type>facadeview</type>
        <id>50</id>
        <control>
          <description>listcontrol</description>
          <type>listcontrol</type>
          <id>50</id>
          <posX>40</posX>
          <posY>50</posY>
          <height>430</height>
          <width>630</width>
          <onleft>50</onleft>
          <onright>50</onright>
          <scrollOffset>2</scrollOffset>
          <itemWidth>89</itemWidth>
          <itemHeight>50</itemHeight>
          <textureHeight>60</textureHeight>
          <IconXOff>25</IconXOff>
          <IconYOff>5</IconYOff>
          <textXOff>25</textXOff>
          <textYOff>8</textYOff>
          <textXOff2>0</textXOff2>
          <textYOff2>32</textYOff2>
          <textXOff3>75</textXOff3>
          <textYOff3>10</textYOff3>
          <font>font16</font>
          <font2>font13</font2>
          <keepaspectratio>yes</keepaspectratio>
          <spinPosX>600</spinPosX>
          <spinPosY>425</spinPosY>
          <spinCanFocus>no</spinCanFocus>
          <suffix>|</suffix>
        </control>
      </control>
    </control>
    
		<control>
      <description>Avatar</description>
      <type>image</type>
      <id>1</id>
      <posX>60</posX>
      <posY>450</posY>
      <height>110</height>
      <width>110</width>
      <keepaspectratio>yes</keepaspectratio>
      <zoom>yes</zoom>
      <texture flipY="true" diffuse="diffusemirrorwide.png">#selectedthumb</texture>
      <animation effect="fade" time="250" delay="0">WindowClose</animation>
    </control>
		
    <control>
      <description>FullName | Location</description>
      <id>0</id>
      <label>#Trakt.User.FullName | #Trakt.User.Location</label>
      <type>label</type>
      <posX>190</posX>
      <posY>450</posY>
      <width>400</width>
      <textcolor>ffa9d0f7</textcolor>
      <font>font13</font>
      <animation effect="fade" time="250" delay="0">WindowClose</animation>
    </control>
    
    <control>
      <description>Shout</description>
      <type>textboxscrollup</type>
      <id>0</id>
      <posX>190</posX>
      <posY>475</posY>
      <width>410</width>
      <height>70</height>      
      <font>font14</font>
      <label>#Trakt.Shout.Text</label>
      <scrollStartDelaySec>12</scrollStartDelaySec>
      <animation effect="fade" time="250" delay="0">WindowClose</animation>
      <animation effect="fade" time="250" delay="0">WindowOpen</animation>
    </control>
    
  </controls>
</window>
