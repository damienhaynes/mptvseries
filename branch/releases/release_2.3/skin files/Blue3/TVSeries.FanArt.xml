<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>9812</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <disabletopbar>yes</disabletopbar>
  <define>#title.color:ffffffff</define>        <!-- Titles Color                       Default: ffdedede-->
  <define>#text.color:ffffffff</define>         <!-- Text Color                         Default: ffffffff-->
  <define>#default.color:ffffffff</define>      <!-- Normal List Color                  Default: ffffffff-->
  <define>#watched.color:ff808080</define>      <!-- Watched List Color                 Default: ff666666 -->
  <define>#notpresent.color:ffF87B72</define>   <!-- File Not Present in List Color     Default: ffef6d16 -->  
  
  <controls>

    <import>common.time.xml</import>    
    <!-- :::::::::::::: BACKGROUNDS :::::::::::::: -->
    
    <control>
      <id>0</id>
      <type>image</type>
      <posX>0</posX>
      <posY>0</posY>
      <width>1024</width>
      <height>576</height>
      <dimColor>50ffffff</dimColor>
      <texture>Backgroundtop.png</texture>
    </control>
    <control>
      <description>preview</description>
      <id>4560</id>
      <type>image</type>
      <posx>-170</posx>
      <posy>0</posy>
      <width>1024</width>
      <height>576</height>
      <texture>#TVSeries.FanArt.SelectedPreview</texture>
	  <colordiffuse>50fefaff</colordiffuse>
      <visible>true</visible>
    </control>
	
	<control>
      <description>Top title</description>
      <type>label</type>
      <id>0</id>
      <posX>15</posX>
      <posY>15</posY>
      <font>font16</font>
	  <textcolor>ffa9d0f7</textcolor>
      <width>250</width>
	  <label>#TVSeries.FanArt.PageTitle</label>
    </control>
   
	<control>
      <description>Filter</description>
      <type>label</type>
      <id>0</id>
      <posX>700</posX>
      <posY>10</posY>
	  <font>font14</font>
      <align>right</align>
      <textcolor>ffFFFFFF</textcolor>
	  <label>#TVSeries.FanArt.FilterResolution</label>
    </control>
   
    <!-- :::::::::::::: INFO LABELS :::::::::::::: -->
    
    <control>
      <description>Download Status</description>
      <type>label</type>
      <id>0</id>
      <posX>66</posX>
      <posY>40</posY>
	  <font>font12</font>
      <label>#TVSeries.FanArt.DownloadingStatus</label>
    </control>
    <control>
      <description>Loading Status</description>
      <type>label</type>
      <id>0</id>
      <posX>300</posX>
      <posY>40</posY>
	  <font>font12</font>
      <label>#TVSeries.FanArt.LoadingStatus</label>
    </control>
	
    <control>
      <description>Resolution</description>
      <type>label</type>
      <id>0</id>
      <posX>66</posX>
      <posY>60</posY>
	  <font>font14</font>
      <label>169</label>
    </control>
    <control>
      <description>FanArt Resolution</description>
      <type>label</type>
      <id>0</id>
      <posX>170</posX>
      <posY>60</posY>
	  <font>font14</font>
      <label>#TVSeries.FanArt.SelectedFanartResolution</label>
	  <align>left</align>
    </control>
    
	<!--  ************** HIDDEN MENU *****************  -->    
    <control>
		<type>actiongroup</type>
		<description>action menu</description>
		<defaultcontrol>2</defaultcontrol>
		<onexit>50</onexit>
		<buttonX>0</buttonX>
		<buttonY>0</buttonY>
		<buttonwidth>60</buttonwidth>
		<buttonheight>576</buttonheight>
		<textureFocus>-</textureFocus>
		<textureNoFocus>-</textureNoFocus>
		<width>320</width>
		<height>720</height>
		<dimColor>00ffffff</dimColor>
		<control>
			<type>image</type>
			<posX>15</posX>
			<posY>63</posY>
			<width>263</width>
			<height>473</height>
			<texture>Backslide.png</texture>
			<colorDiffuse>fffffffff</colorDiffuse>
			<visible>!Control.HasFocus(50)</visible>
			<animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
			<animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
		</control>		
		<control>
			<description>button group</description>
			<type>group</type>
			<animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
			<animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
			<posX>40</posX>
			<posY>97</posY>
			<layout>StackLayout</layout>
			<visible>!Control.HasFocus(50)</visible>
			<control>
			  <description>Change Layout</description>
			  <type>button</type>
			  <id>2</id>
			  <label>Change Layout</label>
			  <onright>50</onright>
			</control>
			<control>
			  <description>Resolution Filter</description>
			  <type>button</type>
			  <id>12</id>
			  <label>Filter</label>
			  <onright>50</onright>
			</control>		
			<control>
			  <description>Random Fanart</description>
			  <type>togglebutton</type>
			  <id>13</id>
			  <label>Random Fanart</label>
			  <onright>50</onright>
			</control>
		</control>
	</control>	  
			
    <!-- :::::::::::::: FACADE :::::::::::::: -->
    
    <control>
      <type>group</type>
      <description>group element</description>
      <id>28</id>
      <layout>StackLayout</layout>
      <posX>50</posX>
      <posY>90</posY>
      <control>
        <description>composite control consisting of a list control and a thumbnail panel</description>
        <type>facadeview</type>
        <id>50</id>
        <control>
          <description>Graphical Thumbpanel</description>
          <type>thumbnailpanel</type>
          <id>50</id>
          <posX>50</posX>
          <posY>90</posY>
          <width>680</width>
          <height>510</height>
		  <onleft>2</onleft>
          <onright>2</onright>
	      <font>font16</font>
	      <spinWidth>16</spinWidth>
	      <spinHeight>16</spinHeight>
	      <spinPosX>620</spinPosX>
	      <spinPosY>520</spinPosY>
	      <spinAlign>Right</spinAlign>
	      <spinColor>ffffffff</spinColor>
	      <textureFocus>mediaitemdetailfo.png</textureFocus>
          <imageFolder>-</imageFolder>
          <imageFolderFocus>tvseries_fanart_focus.png</imageFolderFocus>
          <downloadColor>#default.color</downloadColor>
          <remoteColor>#watched.color</remoteColor>
          <textcolor>#notpresent.color</textcolor>
          <textcolor2>#notpresent.color</textcolor2>
          <textcolor3>#notpresent.color</textcolor3>
		  <!-- Large Thumbnails -->
          <itemWidthBig>305</itemWidthBig>
          <itemHeightBig>215</itemHeightBig>
          <textureWidthBig>305</textureWidthBig>
          <textureHeightBig>215</textureHeightBig>
          <thumbWidthBig>270</thumbWidthBig>
          <thumbHeightBig>168</thumbHeightBig>
          <thumbPosXBig>14</thumbPosXBig>
          <thumbPosYBig>6</thumbPosYBig>
          <thumbZoom>no</thumbZoom>
		  <!-- Small Thumbnails -->
		  <itemWidth>214</itemWidth>
          <itemHeight>140</itemHeight>
          <textureWidth>214</textureWidth>
          <textureHeight>151</textureHeight>
          <thumbWidth>189</thumbWidth>
          <thumbHeight>118</thumbHeight>
          <thumbPosX>14</thumbPosX>
          <thumbPosY>6</thumbPosY>
          <thumbZoom>no</thumbZoom>
          <enableFocusZoom>no</enableFocusZoom>
          <textXOff>20</textXOff>
          <textYOff>-33</textYOff>
          <unfocusedAlpha>150</unfocusedAlpha>
        </control>
		<control>
          <description>Filmstrip view</description>
          <type>filmstrip</type>
          <dimColor>90ffffff</dimColor>
          <id>50</id>
          <scrollOffset>2</scrollOffset>
          <posX>0</posX>
          <posY>350</posY>
          <width>700</width>
		  <height>576</height>
          <onup>2</onup>
          <onleft>2</onleft>
		  <thumbPosX>2</thumbPosX>
          <thumbPosY>2</thumbPosY>         
		  <thumbWidth>173</thumbWidth>
          <thumbHeight>98</thumbHeight>         
          <itemWidth>201</itemWidth>
          <itemHeight>113</itemHeight>
          <textureWidth>183</textureWidth>
          <textureHeight>104</textureHeight>
          <imageFolderFocus>Picture_cover.png</imageFolderFocus>
          <frame>Picture_cover.png</frame>
          <frameFocus>Picture_cover.png</frameFocus>
          <background>Coverbig.png</background>
          <thumbs flipY="true" diffuse="Thumb_Mask.png">
          </thumbs>
          <InfoImage flipY="true" diffuse="Thumb_Mask.png">
          </InfoImage>
          <showFrame>yes</showFrame>
          <showFolder>yes</showFolder>
          <showBackGround>no</showBackGround>
          <showInfoImage>no</showInfoImage>
          <visible>facadeview.filmstrip</visible>
          <thumbAnimation effect="zoom" start="100,100" end="130,130" time="200">focus</thumbAnimation>
          <thumbAnimation effect="zoom" start="130,130" end="100,100" time="200">unfocus</thumbAnimation>
          <animation effect="rotatey" start="20" end="0" center="525,0" tween="back" ease="easeout"  time="500" reversible="false">unfocus</animation>
      	  <animation effect="rotatey" start="0" end="20" center="525,0"  tween="back" ease="easeout"   time="500" reversible="false">focus</animation>
        </control>
      </control>
    </control>
  </controls>
</window>